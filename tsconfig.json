{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", 
    "paths": {
      "~/*": ["*"],
      "@/*": ["*"], 
      "components/*": ["src/components/*"],
      "lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "index.js",
    "nativewind-env.d.ts"
  ]
}
